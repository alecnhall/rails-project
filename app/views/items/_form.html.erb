<%= form_for @item do |f| %>
    <% if @item.errors.any? %>
        <div id="error_explanation">
            <h3> There are errors: </h3>
            <ul>
                <% @item.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.hidden_field :pantry_id %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :amount %>
    <%= f.number_field :amount %>
    <%= f.submit %>
<% end %>