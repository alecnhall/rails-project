<%= form_for @recipe do |f| %>
    <% if @recipe.errors.any? %>
        <div id="error_explanation">
        <h2>
            <%= pluralize(@recipe.errors.count, "error") %> prohibited
            this recipe from being saved:
        </h2>

        <ul>
        <% @recipe.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
        </div>
    <% end %>

    <%= f.hidden_field :user_id %>

    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :description %>
    <%= f.text_area :description %> <br>
    <br>
    <%= f.label :ingredients %> <br>
    <%= f.fields_for :ingredients, @recipe.ingredients.build do |ingredients_fields| %>
        <%= ingredients_fields.label :name %>
        <%= ingredients_fields.text_field :name%> <br>

        <%= ingredients_fields.label :amount %>
        <%= ingredients_fields.text_field :name%> <br>
    <% end %>
    <%= f.submit %>

<% end %>