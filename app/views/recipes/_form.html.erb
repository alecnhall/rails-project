<%= form_for @recipe do |f| %>
    <% f.label :name %>
    <% f.text_field :name %><br>
    <% f.label :description %>
    <% f.text_area :description %> <br>

    <%= f.fields_for :ingredients do |ing| %>
        <%= ing.label :name %>
        <%= ing.text_field :name%> <br>

        <%= ing.label :amount %>
        <%= ing.text_field :name%> <br>
    <% end %>

    <%= f.submit %>

<% end %>