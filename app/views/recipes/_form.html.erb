<%= form_for @recipe do |f| %>


    <%= f.hidden_field :user_id %>
    <div class="field<%= ' field_with_errors' if @recipe.errors[:name].any? %>">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    </div>
    <%= f.label :description %>
    <%= f.text_area :description %> <br>
    <br>
    <%= f.label :ingredients %> <br>
    <%= f.add_nested_fields_link :ingredients %><br>
    <%= f.nested_fields_for :ingredients do |ff| %>
        <%= ff.label :name %>
        <%= ff.text_field :name%> <br>

        <%= ff.label :amount %>
        <%= ff.text_field :amount %> <br>

        <%= ff.remove_nested_fields_link %>
    <% end %>
    <br>

    <%= f.label :Directions %> <br>
    <%= f.add_nested_fields_link :directions %><br>
    <%= f.nested_fields_for :directions do |ff| %>
        <%= ff.label :step %>
        <%= ff.text_area :step %> <br>

        <%= ff.remove_nested_fields_link %>
    <% end %>
    <br>
    
    
    <%= f.submit %>

<% end %>